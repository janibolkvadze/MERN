  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.2",
    "express": "^4.17.3",
    "mongoose": "^5.6.11",
    "nodemon": "^1.19.1"
  }
}